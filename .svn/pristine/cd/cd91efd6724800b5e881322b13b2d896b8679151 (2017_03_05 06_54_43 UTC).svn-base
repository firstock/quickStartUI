@charset "utf-8";
/*@font-face {font-family: 'Nanum Gothic';src: url('../font/nanum.ttf');}
@font-face {	font-family: 'Yanone';src: url('../font/Yanone.woff') ;}*/

/*CSS 초기화*/
a { text-decoration:none;}
html, body {width: 100%; height: 100%;}
body, div, p, ul, ol, li, h1, h2, h3, h4 {padding: 0; margin: 0;}
ol, ul, li {list-style: none;}
img {border: none; }
body {font-family: 'Nanum Gothic', '맑은 고딕', Helvetica, Arial, sans-serif;
font-size: 14px;	line-height: 20px;	color: #676767;	background:#ebefee;}
.hidden {	display: none;}
.noVisible {visibility: hidden;position: absolute;font-size: 0;width: 0;
height: 0;	line-height: 0;margin: 0;padding: 0;	background: none;}

/*스킵 네비게이션*/
#skipNav a {display:block;  height:1px; width:1px; margin:0 -1px -1px 0; overflow:hidden; font-size:0; line-height:0;}
#skipNav a:hover, #skipNav a:active, #skipNav a:focus {width:100%; height:auto; margin:0; padding:5px; font-size:12px; line-height:1; text-decoration:none; text-align: center;}

/*헤더 영역*/
header {width: 100%;padding: 30px 0;background:#fff;padding-left:20px;}
#logo, #logo a {float: left;background:#fff;margin-left:10px;color:#fa6462;}
#search{float:left;margin-left:20px;}
header:after {display: block;	content: "";	clear: both;}

/*GNB 영역*/
#gnb  {z-index: 999;float: right; margin: 0 0 0 0;}
#gnb li {display:inline-block;margin: 0 20px 0 0px; padding:0;width:90px;}
#gnb li a:link {font-family:'Yanone', 'Nanum Gothic', '맑은 고딕', Helvetica, Arial, sans-serif;
color:#fa6462;	text-decoration: none;font-weight:bold;}
#gnb li a:visited {text-decoration: none; color: #fa6462;font-weight:bold;}
#gnb li a:active {text-decoration: none; color: #fa6462;font-weight:bold;}
#gnb li a:hover {text-decoration: none; color: #fa6462;font-weight:bold;font-size:110%;}
.sub{position:absolute;display:none;z-index:9999;}

/*메인배너*/
#main_ban{border:1px solid #ccc;background:#ccc;max-width:100%;height:400px;
overflow: hidden;}
#main_ban img{width:100%;max-width:100%;}
.rolling_wrap{width:100%;height:400px}
.rolling_wrap li img{max-width:100%;}

/*리스트*/
#wrap {width: 1024px;	margin: 0 auto; background:#ebefee;}
.funding_list ul{overflow: hidden;margin-left: -6px;margin-top:10px;width:1060px;}
.funding_list li{border:1px solid #ccc;background:#fff;list-style:none;
width:250px;height:300px;float:left;position: relative;margin: 0 0 10px 10px;padding: 0;
background-color: #fff;}
.funding_list .li_title{text-align:center;font-weight:bold;}
.funding_list .li_username{text-align:center;}
.funding_list .li_funds{text-align:center;}
.funding_list .li_meter{text-align:center;}
.funding_list meter{width:160px;}
.funding_list li:after{display:block;content:"";clear:both;}

/*푸터영역*/
footer{background:#fff;height:100px;text-align:center;padding-top:50px;border-top:1px solid #e5e5e5;}
